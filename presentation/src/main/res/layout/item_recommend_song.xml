<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_container"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_recommend_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_recommend_song_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:fontFamily="@font/nanum_square_regular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/title5"
            app:layout_constraintEnd_toStartOf="@id/tv_apply_recommend_song"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_image_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="(G)I-DLE 'TOMBOY' Lyrics ((여자)아이들 TOMBOY 가사) (Color Coded Lyrics)" />

        <TextView
            android:id="@+id/tv_apply_recommend_song"
            android:layout_width="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:text="@string/text_simple_apply"
            android:textColor="@color/main"
            android:fontFamily="@font/nanum_square_regular"
            android:includeFontPadding="false"
            android:textSize="@dimen/title5"
            app:layout_constraintTop_toTopOf="@id/tv_recommend_song_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_recommend_song_title"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
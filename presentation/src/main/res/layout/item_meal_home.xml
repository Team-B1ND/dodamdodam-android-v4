<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_meal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            app:cardCornerRadius="@dimen/card_corner"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_meal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/noto_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/title3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="내일의 조식" />

                <ImageView
                    android:id="@+id/iv_meal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_meal_type"
                    app:layout_constraintTop_toBottomOf="@id/tv_meal_type"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_dinner" />

                <TextView
                    android:id="@+id/tv_meal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_black"
                    android:maxLines="3"
                    android:textSize="@dimen/title6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_meal"
                    app:layout_constraintTop_toBottomOf="@id/tv_meal_type"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/meal_dummy" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
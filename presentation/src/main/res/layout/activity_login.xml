<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="kr.hs.dgsw.smartschool.dodamdodam.features.auth.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.features.sign.signin.SignInActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="100dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_b1nd_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_bold"
                    android:text="@string/text_sign_in"
                    app:layout_constraintBottom_toTopOf="@id/layout_id"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/title2"
                    android:layout_marginVertical="30dp"
                    app:layout_constraintStart_toStartOf="@id/layout_id"
                    app:layout_constraintTop_toBottomOf="@id/image_sign_in" />

                <kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputLayout
                    android:id="@+id/layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_margin"
                    android:layout_marginTop="50dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:endIconMode="clear_text"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_sign_in"
                    app:layout_constraintBottom_toTopOf="@id/layout_password">

                    <kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputEditText
                        android:id="@+id/edit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_id"
                        android:inputType="text"
                        android:maxLength="15"
                        android:text="@={vm.id}" />

                </kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputLayout>

                <kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_margin"
                    android:layout_marginTop="30dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:layout_constraintBottom_toTopOf="@id/check_auto_sign_in"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_id"
                    app:passwordToggleEnabled="true">

                    <kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputEditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:hint="@string/text_password"
                        android:maxLength="15"
                        android:text="@={vm.pw}" />

                </kr.hs.dgsw.smartschool.dodamdodam.widget.DodamTextInputLayout>

                <CheckBox
                    android:id="@+id/check_auto_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_margin"
                    android:layout_marginTop="20dp"
                    android:buttonTint="@color/main"
                    android:fontFamily="@font/noto_regular"
                    android:includeFontPadding="false"
                    android:text="@string/text_auto_login"
                    app:layout_constraintTop_toBottomOf="@id/layout_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_sign_in" />

                <FrameLayout
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginHorizontal="@dimen/default_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layout_sign_up">

                    <kr.hs.dgsw.smartschool.dodamdodam.widget.DodamButton
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:onClick="@{() -> vm.onClickSignIn()}"
                        android:text="@string/text_sign_in" />

                    <ProgressBar
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/white"
                        android:visibility="@{vm.isLoading ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="visible" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_sign_up_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/noto_light"
                        android:includeFontPadding="false"
                        android:text="@string/text_sign_up_desc"
                        app:layout_constraintEnd_toStartOf="@id/tv_sign_up"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:clickable="true"
                        android:fontFamily="@font/noto_regular"
                        android:includeFontPadding="false"
                        android:text="@string/text_sign_up"
                        android:textColor="@color/main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_sign_up_desc"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<data>
        <variable
            name="vm"
            type="kr.hs.dgsw.smartschool.dodamdodam.features.sign.signUp.SignUpViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="460dp"
        app:cardCornerRadius="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="460dp"
        android:padding="30dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_id"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:boxStrokeErrorColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_generation_spinner"
            android:drawablePadding="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLength="15"
                android:text="@={vm.id}"
                android:hint="아이디"
                android:backgroundTint="@color/white"
                android:textColorHint="#999999" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_id"
            app:passwordToggleEnabled="true"
            android:drawablePadding="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_password"
                android:layout_width="match_parent"
                android:hint="비밀번호"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:maxLength="15"
                android:text="@={vm.password}"
                android:backgroundTint="@color/white"
                android:textColorHint="#999999" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/layout_generation_spinner"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/layout_id"
            app:layout_constraintTop_toTopOf="@id/layout_id"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/generation_spinner"
                android:spinnerMode="dialog" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_school_num"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="@id/layout_id"
            app:layout_constraintTop_toBottomOf="@id/layout_password">

            <Spinner
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/grade_spinner"
                android:spinnerMode="dialog"
                />
            <Spinner
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/class_num_spinner"
                android:spinnerMode="dialog" />
            <Spinner
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/stu_num_spinner"
                android:spinnerMode="dialog" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
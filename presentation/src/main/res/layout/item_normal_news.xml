<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/card_corner"
            app:cardElevation="@dimen/card_elevation"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/iv_news_image"
                   android:layout_width="110dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/default_img"
                   android:scaleType="centerCrop"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" />

               <TextView
                   android:id="@+id/tv_news_title"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textColor="@color/color_black"
                   android:textSize="@dimen/title4"
                   android:fontFamily="@font/noto_regular"
                   android:includeFontPadding="false"
                   tools:text="뉴스의 제목이 들어갑니다."
                   android:maxLines="2"
                   android:ellipsize="end"
                   app:layout_constraintBottom_toTopOf="@id/tv_news_tags"
                   android:layout_marginHorizontal="15dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toEndOf="@id/iv_news_image"
                   app:layout_constraintEnd_toEndOf="parent" />

               <TextView
                   android:id="@+id/tv_news_tags"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textColor="@color/gray500"
                   android:textSize="@dimen/title6"
                   tools:text="#해시태그 #해시태그"
                   android:fontFamily="@font/noto_regular"
                   android:includeFontPadding="false"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:layout_marginHorizontal="15dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/tv_news_title"
                   app:layout_constraintStart_toEndOf="@id/iv_news_image"
                   app:layout_constraintEnd_toEndOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>